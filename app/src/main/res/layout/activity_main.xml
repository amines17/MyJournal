<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/amine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <HorizontalScrollView
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn1"
                android:background="@color/amine2"
                android:text="fr"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn2"
                android:background="@color/amine2"
                android:text="us"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn3"
                android:background="@color/amine2"
                android:text="ae"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn4"
                android:background="@color/amine2"
                android:text="it"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn5"
                android:background="@color/amine2"
                android:text="be"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn6"
                android:background="@color/amine2"
                android:text="kr"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn7"
                android:background="@color/amine2"
                android:text="cz"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn8"
                android:background="@color/amine2"
                android:text="de"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn9"
                android:background="@color/amine2"
                android:text="jp"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn10"
                android:background="@color/amine2"
                android:text="lt"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn11"
                android:background="@color/amine2"
                android:text="gb"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn12"
                android:background="@color/amine2"
                android:text="nz"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn13"
                android:background="@color/amine2"
                android:text="co"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn14"
                android:background="@color/amine2"
                android:text="ch"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn15"
                android:background="@color/amine2"
                android:text="au"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>
            <Button
                android:id="@+id/btn16"
                android:background="@color/amine2"
                android:text="pl"
                android:textSize="8sp"
                android:padding="4dp"
                android:layout_width="30dp"
                android:layout_height="30dp">
            </Button>

        </LinearLayout>

    </HorizontalScrollView>


    <androidx.cardview.widget.CardView
        android:layout_margin="14dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            app:defaultQueryHint="Search News..."
            app:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </androidx.appcompat.widget.SearchView>
    </androidx.cardview.widget.CardView>


    <HorizontalScrollView
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_1"
                android:background="@color/amine2"
                android:text="general"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:id="@+id/btn_2"
                android:background="@color/amine2"
                android:text="entertainment"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:id="@+id/btn_3"
                android:background="@color/amine2"
                android:text="business"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:id="@+id/btn_4"
                android:background="@color/amine2"
                android:text="health"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:id="@+id/btn_5"
                android:background="@color/amine2"
                android:text="science"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:id="@+id/btn_6"
                android:background="@color/amine2"
                android:text="sports"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
            <Button
                android:id="@+id/btn_7"
                android:background="@color/amine2"
                android:text="technology"
                android:textSize="12sp"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>

    </HorizontalScrollView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_main"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingClass">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>